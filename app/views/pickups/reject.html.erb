<% provide(:title, "Email") %>
<%= render 'layouts/navbar' %>

    <div class='container white-container'>
        <h2>Preview of Email to be Sent</h2><br/>
        To: <%=@pickup.donor_email%><br/>
        <br/>
        <p><%if @pickup.donor_first_name.blank?%>
            Hello,
            <%else%>
            Hello <%=@pickup.donor_first_name%>,<br/>
            <%end%>
        </p>
        
        <%if @pickup.rejected_reason == "Does not meet standards"%>
            <%=render 'layouts/rejected_does_not_meet_standards'%>
        <%elsif @pickup.rejected_reason == "Drop-down crib"%>
            <%=render 'layouts/rejected_drop_side_cribs'%>
        <%elsif @pickup.rejected_reason == "Out of area"%>
            <%=render 'layouts/rejected_out_of_area'%>
        <%elsif @pickup.rejected_reason == "Other"%>
            <%=render 'layouts/rejected_other'%>
        <%end%>
        
        <p>Thank you for understanding,</p>
        Sharing Connections<br/>
        5111 Chase Ave.<br/>
        Downers Grove, IL 60515<br/>
        630.971.0565 x 300</br>
        pickup@sharingconnections.org<br/><br/>
        Mission: Share Good Things With Good People.</br><br/>
        Vision: Tonight, everyone eats at a table and sleeps in a bed.
        
        
        <div class="row">
            <div class="col-xs-12">
                <br/><br/><br/>
                <%= form_for(@pickup) do |f| %>
                <div class="form-group">
                    <%= f.submit "Cancel", name: "cancel_email", class: "btn btn-danger btn-wide" %>
                </div>
                <%end%>
            </div>
        </div>
            
    </div>
     
